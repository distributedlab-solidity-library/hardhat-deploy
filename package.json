{
  "name": "@solarity/hardhat-migrate",
  "version": "2.0.0",
  "description": "Automatic deployment and verification of smart contracts",
  "scripts": {
    "install": "npx husky install",
    "compile": "tsc --build .",
    "build-local": "npm run compile && npm run lint-fix && bash ./scripts/build-local.sh",
    "clean": "bash ./scripts/clean.sh",
    "test": "mocha --recursive 'test/**/*.ts' --exit",
    "sol-test": "cd sample-project/ && npx hardhat test && cd ../",
    "lint-fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "publish-to-npm": "npm run compile && npm run lint-fix && bash ./scripts/publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dl-solarity/hardhat-migrate.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "etherscan",
    "distributedlab",
    "solarity"
  ],
  "author": "Distributed Lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dl-solarity/hardhat-migrate/issues"
  },
  "homepage": "https://github.com/dl-solarity/hardhat-migrate#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@typechain/truffle-v5": "^8.0.6",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.1",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^8.1.0",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "hardhat": "^2.17.0",
    "typechain": "^8.3.1"
  }
}
