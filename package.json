{
  "name": "@solarity/hardhat-migrate",
  "version": "2.0.0",
  "description": "Automatic deployment and verification of smart contracts",
  "scripts": {
    "install": "npx husky install",
    "compile": "tsc --build .",
    "build-local": "npm run compile && npm run lint-fix && bash ./scripts/build-local.sh",
    "clean": "bash ./scripts/clean.sh",
    "test": "mocha --recursive 'test/**/*.ts' --exit",    
    "sol-test": "cd sample-project/ && npx hardhat test && cd ../",
    "lint-fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' && tslint --fix --config tslint.json --project tsconfig.json",
    "publish-to-npm": "npm run compile && npm run lint-fix && bash ./scripts/publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dl-solarity/hardhat-migrate.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "etherscan",
    "distributedlab",
    "solarity"
  ],
  "author": "Distributed Lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dl-solarity/hardhat-migrate/issues"
  },
  "homepage": "https://github.com/dl-solarity/hardhat-migrate#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.7",
    "hardhat": "^2.10.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~4.5.2"
  },
  "peerDependencies": {
    "hardhat": "^2.10.0"
  }
}
