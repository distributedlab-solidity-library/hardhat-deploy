{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "types": [
      "@nomiclabs/hardhat-truffle5"
    ]
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./test/**/hardhat.config.ts",
    "./publish"
  ],
  "include": [
    "src",
    "test",
  ]
}
